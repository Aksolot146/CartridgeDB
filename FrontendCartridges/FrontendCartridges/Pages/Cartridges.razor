@page "/cartridges"
@using System.Linq
@using System.Net.Http
@using System.Net.Http.Json
@using System.Threading.Tasks
@using FrontendCartridges.Models
@inject HttpClient Http
@inject NavigationManager navigationManager

<h3>Cartridges</h3>
<Button Name="Add" Width="200" OnClick="Add"></Button>

@if (cartridges == null)
{
    <p>No cartridges found.</p>
}
else
{
    @*<Button Name="Manage" Width="200" OnClick="Manage"></Button>*@
    <ul>
        @foreach (var cartridge in cartridges)
        {
            <li>
                <a href="@($"https://localhost:44312/cartridges/edit/{cartridge.Id}")">
                    @cartridge.Id. Type: @cartridge.FullName, Barcode: @cartridge.Barcode; 
                    Department: @cartridge.Events.OrderBy(x => x.EventDate).Last().ToDepartment.Name; 
                    Status: @cartridge.Events.OrderBy(x => x.EventDate).Last().Status.Name
                </a>
            </li>
        }
    </ul>
}

@code {
    private Cartridge[] cartridges;

    protected override async Task OnInitializedAsync()
    {
        cartridges = await Http.GetFromJsonAsync<Cartridge[]>("https://localhost:44371/api/cartridges");
    }

    private void Add()
    {
        navigationManager.NavigateTo("https://localhost:44312/cartridges/add");
    }

    //private void Manage()
    //{
    //    navigationManager.NavigateTo("https://localhost:44312/cartridges/manage");
    //}
}